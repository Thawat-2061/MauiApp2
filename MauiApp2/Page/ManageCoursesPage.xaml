<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiApp2.ViewModel"
             xmlns:model="clr-namespace:MauiApp2.Model"
             x:DataType="viewmodel:ManageCoursesViewModel"
             x:Class="MauiApp2.Page.ManageCoursesPage"
             Shell.NavBarIsVisible="False"
             Title="Manage Courses"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Save Changes Button -->
            <Button Text="Save Changes"
                    Command="{Binding SaveChangesCommand}"
                    BackgroundColor="#3498db"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalOptions="Fill"
                    Margin="0,0,0,20"/>

            <!-- Selected Courses Section -->
            <Frame BackgroundColor="#1e1e1e" 
                   CornerRadius="10" 
                   Padding="15" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Selected Courses (Term 3)"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <CollectionView ItemsSource="{Binding SelectedCourses}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Course">
                                <Frame CornerRadius="10" 
                                       Padding="10" 
                                       BackgroundColor="#2c3e50" 
                                       HasShadow="True">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <VerticalStackLayout Spacing="8">
                                            <Label Text="{Binding CourseId, StringFormat='ðŸ†” {0}'}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="White"/>
                                            <Label Text="{Binding CourseName, StringFormat='ðŸ“– {0}'}"
                                                   FontSize="16"
                                                   TextColor="White"/>
                                            <!-- à¹€à¸žà¸´à¹ˆà¸¡ credits à¹à¸¥à¸° grade -->
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="{Binding Credits, StringFormat='ðŸŽ¯ à¸«à¸™à¹ˆà¸§à¸¢à¸à¸´à¸•: {0}'}"
                                                       FontSize="14"
                                                       TextColor="#bdc3c7"/>
                                                
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                        <Button Text="âˆ’"
                                                Grid.Column="1"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ManageCoursesViewModel}}, Path=RemoveCourseCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#e74c3c"
                                                TextColor="White"
                                                CornerRadius="20"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                VerticalOptions="Center"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Search Bar -->
            <SearchBar Placeholder="Search courses..."
                       Text="{Binding SearchText, Mode=TwoWay}"
                       BackgroundColor="White"
                       CancelButtonColor="#3498db"
                       TextColor="#2c3e50"
                       FontSize="16"
                       HorizontalOptions="Fill"
                       Margin="0,20,0,20"/>

            <!-- Available Courses Section -->
            <Frame BackgroundColor="#1e1e1e" 
                   CornerRadius="10" 
                   Padding="15" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Available Courses"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <CollectionView ItemsSource="{Binding FilteredAvailableCourses}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Course">
                                <Frame CornerRadius="10" 
                                       Padding="10" 
                                       BackgroundColor="#2c3e50" 
                                       HasShadow="True">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <VerticalStackLayout Spacing="8">
                                            <Label Text="{Binding CourseId, StringFormat='ðŸ†” {0}'}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="White"/>
                                            <Label Text="{Binding CourseName, StringFormat='ðŸ“– {0}'}"
                                                   FontSize="16"
                                                   TextColor="White"/>
                                            <!-- à¹€à¸žà¸´à¹ˆà¸¡ credits à¹à¸¥à¸° grade -->
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="{Binding Credits, StringFormat='ðŸŽ¯ à¸«à¸™à¹ˆà¸§à¸¢à¸à¸´à¸•: {0}'}"
                                                       FontSize="14"
                                                       TextColor="#bdc3c7"/>
                                                
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                        <Button Text="+"
                                                Grid.Column="1"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ManageCoursesViewModel}}, Path=AddCourseCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#27ae60"
                                                TextColor="White"
                                                CornerRadius="20"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                VerticalOptions="Center"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>